@model IEnumerable<PHAMANHAO_TEST2.Models.Phim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cinema</h2>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="panel panel-default">
                <div class="panel panel-heading">
                    <strong>@item.tenphim </strong>
                </div>
                <div class="panel-body">
                    <p><strong>Đạo diễn: </strong>@item.daodien</p>
                    <p><img src="/@item.hinh" alt="hinh thumnail" /></p>
                    <p><strong>Ngày chiếu: </strong>@item.ngaychieu</p>

                </div>
                <div class="panel-footer clearfix">
                    <div class="pull-right">
                        <btn class="btn btn-warning">Sắp chiếu</btn>
                        @*@Html.ActionLink("", "Details", new { id = item.maphim }, new { @class = "btn btn-success" })*@

                    </div>
                </div>
            </div>
        </div>
    }
</div>



