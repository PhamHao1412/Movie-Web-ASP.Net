
@model IEnumerable<PHAMANHAO_TEST2.Models.ThongKeViewModel>

@{
    ViewBag.Title = "ThongKe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thống kê số lượng vé</h2>


<table class="table">
    <tr>
        <th>
            Tên Phim
        </th>
        <th>
            Tổng số lượng vé
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TongSoLuong)
            </td>
        </tr>
    }

</table>